{
  "manifest_version": 2,
  "name": "New TAB block - patkysns addon",
  "version": "1.0",
  "description": "blokuje otevření nových oken v prohlížeči",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "windows",
    "storage"
  ],
  "background": {
    "scripts": ["script.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/default_icon.png",
    "default_popup": "popup.html"
  }
}
